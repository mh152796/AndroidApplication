<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_margin="5dp"
       android:layout_height="0dp"
       android:background="@color/white"
       android:padding="20dp"
       android:orientation="vertical"
       android:layout_weight="3">

       <TextView
           android:id="@+id/workingsTextId"
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_gravity="end"
           android:textStyle="bold"
           android:layout_weight="1"
           android:paddingRight="30dp"
           android:text="2+3"
           android:textColor="@color/black"
           android:textSize="30sp" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center_vertical"
           android:paddingRight="30dp"
           android:textColor="@color/black"
           android:text="5"
           android:textStyle="bold"
           android:layout_gravity="end"
           android:textSize="30sp"
           android:id="@+id/resultTextView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@color/teal_700"
        android:layout_weight="7"
        android:orientation="vertical"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:onClick="clearOnClick"
                    android:textColor="#FF0000"
                    android:text="C"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:textColor="@color/white"
                    android:onClick="braketOnClick"
                    android:text="CE"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:onClick="powerOnClick"
                    android:background="@null"
                    android:textColor="#FFA500"
                    android:text="^"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:onClick="divisionOnClick"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="#FFA500"
                    android:text="/"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="sevenOnClick"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="7"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="eightOnClick"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/white"
                android:text="8"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:onClick="nineOnClick"
                android:background="@null"
                android:textColor="@color/white"
                android:text="9"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:onClick="multiplyOnClick"
                android:background="@null"
                android:textColor="#FFA500"
                android:text="X"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="fourOnClick"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="4"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:onClick="fiveOnClick"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="5"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:onClick="sixOnClick"
                android:background="@null"
                android:textColor="@color/white"
                android:text="6"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="subtractOnClick"
                android:textColor="#FFA500"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OneOnClick"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:onClick="twoOnClick"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:onClick="threeOnClick"
                android:textColor="@color/white"
                android:text="3"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="additionOnClick"
                android:textColor="#FFA500"
                android:text="+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="decimalOnClick"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="."/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="zeroOnClick"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/white"
                android:text="0"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="doubleZeroOnClick"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/white"
                android:text="00"/>


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="#5D8AA8"
                android:onClick="equalOnClick"
                android:textColor="@color/white"
                android:text="="/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>